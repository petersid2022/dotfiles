set $mod Mod4

font pango:Noto Sans 20px

exec_always --no-startup-id xinput set-prop "SYNA3296:00 06CB:CD50 Touchpad" "libinput Tapping Enabled" 1
exec_always --no-startup-id "setxkbmap -model pc104 -layout us,gr -variant ,, -option grp:alt_shift_toggle"

exec --no-startup-id sh -c "sleep 1 && /usr/local/bin/volumeicon"
exec --no-startup-id nm-applet
exec --no-startup-id gxkb
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec --no-startup-id nitrogen --restore &
exec --no-startup-id xfce4-power-manager
exec --no-startup-id xfce4-screensaver

bindcode 173 exec playerctl previous
bindcode 172 exec playerctl play-pause
bindcode 171 exec playerctl next

floating_modifier $mod

bindsym Control+Shift+Escape exec --no-startup-id xfce4-taskmanager
bindsym Print exec --no-startup-id xfce4-screenshooter
#bindsym $mod+Return exec --no-startup-id terminator 
bindsym $mod+Return exec --no-startup-id xfce4-terminal 
bindsym $mod+d exec --no-startup-id "dmenu_run -fn 'Noto Sans-18'"
bindsym $mod+t exec --no-startup-id "thunar /home/petrside/7o-eksamhno"
bindsym $mod+q kill
bindsym $mod+Tab workspace back_and_forth

# change focus
bindcode $mod+60 focus left
bindcode $mod+61 focus right

bindsym $mod+h focus left 
bindsym $mod+l focus right
bindsym $mod+j focus down 
bindsym $mod+k focus up 

# move focused window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+semicolon move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

